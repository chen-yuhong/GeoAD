<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/requestNew"
        android:layout_width="275sp"
        android:layout_height="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="218dp"
        android:text="@string/request_change_text" />

    <Button
        android:id="@+id/requestChange"
        android:layout_width="275sp"
        android:layout_height="60sp"
        android:layout_below="@id/requestNew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175sp"
        android:text="@string/request_new_text" />

</RelativeLayout>